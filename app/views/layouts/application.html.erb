<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
        <%= link_to "Nagano Cake", root_path, class: "navbar-brand" %>

        <ul class="navbar-nav nav justify-content-end mr-sm-2">
          <% if customer_signed_in? %>
            <li class="nav-item">
              <%= link_to "　マイページ", customer_path(current_customer) %>
            </li>
            <li class="nav-item">
              <%= link_to "　カート内商品一覧", cart_items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "　ログアウト", destroy_customer_session_path, method: :delete %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "　商品一覧", admin_items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "　受注一覧", "#" %>
            </li>
            <li class="nav-item">
              <%= link_to "　商品登録", new_admin_item_path %>
            </li>
            <li class="nav-item">
              <%= link_to "　ログアウト", destroy_admin_session_path, method: :delete %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "　新規登録", new_customer_registration_path %>
            </li>
            <li class="nav-item">
              <%= link_to "　ログイン", new_customer_session_path %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>

    <div class="body">
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
