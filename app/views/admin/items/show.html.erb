<h2 class="pb-2 mb-4"><%= @item.name %></h2>

<div class="row">
  <div class="col-6">
    <%= attachment_image_tag @item, :image, format: 'jpeg', style: "max-width: 100%"%>
  </div>
  <div class="col-6">
    <table class="table">
    <tr>
        <th>商品名</th>
        <td><%= @item.name%></td>
    </tr>
    <tr>
        <th>紹介文</th>
        <td><%= @item.introduction %></td>
    </tr>
    <tr>
        <th>単価</th>
        <td><%= @item.price %></td>
    </tr>
    <tr>
        <th>ジャンル</th>
        <td><%= @item.genre_id %></td>
    </tr>
    <tr>
        <th>販売状況</th>
        <td><%= @item.is_active_i18n %></td>
    </tr>
    </table>
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-info"%>
  </div>
</div>