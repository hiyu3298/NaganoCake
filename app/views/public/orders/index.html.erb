<h2>オーダー一覧</h2>

<table class="table">
<tr>
  <th>購入日</th>
  <th>購入商品</th>
  <th>商品単価</th>
  <th>購入個数</th>
  <th>購入金額</th>
  <th>支払い方法</th>
  <th>注文詳細</th>
</tr>

<% @orders.each do |order| %>
  <tr>
    <td style="vertical-align: middle;"><%= order.created_at.strftime("%Y/%m/%d") %></td>
    <% order.order_details.each do |order_detail| %>
      <td style="vertical-align: middle;"><%= order_detail.item.name %><br></td>
      <td style="vertical-align: middle;"><%= order_detail.item.price %><br></td>
      <td style="vertical-align: middle;"><%= order_detail.amount %><br></td>
      <td style="vertical-align: middle;"><%= order_detail.item.price * order_detail.amount %><br></td>
    <% end %>
    <td style="vertical-align: middle;"><%= order.payment_method %><br></td>
    <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
  </tr>
<% end %>
</table>