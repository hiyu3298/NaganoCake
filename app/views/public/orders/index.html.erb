<h2>オーダー一覧</h2>

<table class="table">
<tr>
  <th>購入日</th>
  <th>購入商品</th>
  <th>商品単価</th>
  <th>購入個数</th>
  <th>購入金額</th>
  <th>支払い方法</th>
</tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td class="col-xs-1">
				<% order.order_details.each do |order_detail| %>
				<%= order_detail.item.name %><br>
			<% end %>
			</td>
  </tr>
<% end %>
</table>